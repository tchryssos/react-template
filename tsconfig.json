{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"baseUrl": "./",
    "paths": {
        "components/*": ["src/components/*"],
        "pages/*": ["src/pages/*"],
        "logic/*": ["src/logic/*"],
        "constants/*": ["src/constants/*"],
				"static/*": ["src/static/*"],
				"types/*": ["src/types/*"]
    }
	},
}